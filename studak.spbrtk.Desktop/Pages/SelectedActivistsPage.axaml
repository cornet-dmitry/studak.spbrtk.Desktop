        <StackPanel Grid.Column="1" Grid.Row="1"
                    Margin="0 0 0 50"
                    Orientation="Horizontal">
            
            <Button Background="Transparent"
                    VerticalAlignment="Center"
                    x:Name="BackArrowBtn"
                    Click="BackArrowBtn_OnClick">
                <Image Source="../Assets/back-arrow-btn.png"
                       Height="50"/>
            </Button>
            
            <TextBlock Classes="h1"
                       VerticalAlignment="Center"
                       Text="Выберите активистов на мероприятие"
                       Margin="50 0 0 0"/>
        </StackPanel>
        
        <ProgressBar Grid.Column="1" Grid.Row="2" 
                     x:Name="Loader"
                     Foreground="#8959EF"
                     IsIndeterminate="True"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     Width="500" Height="50" 
                     IsVisible="False"/>
        
        <StackPanel Grid.Column="1" Grid.Row="2"
                    Orientation="Vertical"
                    VerticalAlignment="Top"
                    Margin="20 0 0 0">
            <StackPanel Orientation="Horizontal">
                <ComboBox Width="500"
                          Height="50"
                          FontFamily="Montserrat"
                          FontSize="18"
                          VerticalAlignment="Center"
                          x:Name="UsersComboBox"/>
                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="20 0 0 0"
                        x:Name="AddListUsers"
                        Click="AddListUsers_OnClick"
                        Background="Transparent">
                    <Image Source="../Assets/add-user-btn.png"
                           Height="70"/>
                </Button>
            </StackPanel>
            
            <ListBox x:Name="SelectedUsersListBox"
                     Margin="50"
                     Width="700"
                     HorizontalAlignment="Left"
                     Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Classes="Elements"
                                           Width="600"
                                           VerticalAlignment="Center"
                                           Text="{Binding FullName}"/>
                                <Button Background="Transparent"
                                        Click="DeleteButton_OnClick"
                                        VerticalAlignment="Center">
                                    <Image Source="../Assets/delete-btn.png"
                                           Height="20"/>
                                </Button>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
        </StackPanel>
    </Grid>
    
</UserControl>
